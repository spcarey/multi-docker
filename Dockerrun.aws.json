{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":[
        {
            "name": "client",
            "image": "careys/multi-client",
            "hostname": "client",
            "essential": false,
            "memory":128
        },
        {
            "name": "server",
            "image": "careys/multi-server",
            "hostname": "api",
            "essential": false,
            "memory":128
        },
        {
            "name": "worker",
            "image": "careys/multi-worker",
            "hostname": "worker",
            "essential": false,
            "memory":128
        },
        {
            "name": "nginx",
            "image": "careys/multi-nginx",
            "essential": true,
            "portMappings": [
               { "hostPort": 80,
                "containerPort": 80
               }
            ],
            "links": ["client", "server"],
            "memory":128
        }
    ]
}